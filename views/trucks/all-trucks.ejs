<% layout('layouts/main') %>

<!-- Fila de Encabezado y Botón de Acción -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="h3 mb-0 text-gray-800"><i class="fas fa-truck me-2"></i>Mi Flota de Camiones</h2>
  <button class="btn btn-danger shadow-sm" data-bs-toggle="modal" data-bs-target="#addTruckModal">
    <i class="fas fa-plus fa-sm text-white-50 me-2"></i>Añadir Nuevo Camión
  </button>
</div>

<!-- Lista de Camiones -->
<div class="row">
  <% if (trucks.length > 0) { %>
    <% trucks.forEach(function(truck){ %>
      <div class="col-xl-4 col-md-6 mb-4">
        <div class="card card-truck shadow-sm h-100">
          <div class="card-body">
            <div class="row no-gutters align-items-center">
              <div class="col">
                <div class="d-flex justify-content-between">
                  <h5 class="card-title"><%= truck.marca %> <%= truck.modelo %></h5>
                  <span class="badge bg-dark"><%= truck.placa %></span>
                </div>
                <div class="text-xs font-weight-bold text-muted text-uppercase mb-1">
                  <%= truck.alias || 'Sin alias' %> - Año: <%= truck.año %>
                </div>
              </div>
              <div class="col-auto">
                <i class="fas fa-truck fa-2x text-gray-300"></i>
              </div>
            </div>
          </div>
          <!-- ======================================================= -->
          <!-- ================ SECCIÓN ACTUALIZADA AQUÍ =============== -->
          <!-- ======================================================= -->
          <div class="card-footer bg-white border-top-0 d-flex justify-content-end gap-2">
            <a href="/trucks/<%= truck._id %>" class="btn btn-outline-secondary btn-sm">
              <i class="fas fa-info-circle me-1"></i> Ver Historial
            </a>
            <!-- Formulario para Eliminar el Camión (con confirmación clara) -->
            <form action="/trucks/delete/<%= truck._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('¿SEGURO que quieres eliminar este camión y TODO su historial de mantenimiento? Esta acción es IRREVERSIBLE.');">
              <button type="submit" class="btn btn-outline-danger btn-sm">
                <i class="fas fa-trash me-1"></i> Eliminar
              </button>
            </form>
          </div>
        </div>
      </div>
    <% }); %>
  <% } else { %>
    <div class="col text-center mt-5">
      <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
      <h4 class="text-muted">Aún no hay camiones en tu flota.</h4>
      <p class="text-muted">¡Añade el primero usando el botón de arriba!</p>
    </div>
  <% } %>
</div>


<!-- ======================================================= -->
<!-- ============= MODAL PARA AÑADIR CAMIÓN ================ -->
<!-- ======================================================= -->
<div class="modal fade" id="addTruckModal" tabindex="-1" aria-labelledby="addTruckModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-dark text-white">
        <h5 class="modal-title" id="addTruckModalLabel"><i class="fas fa-truck-plus me-2"></i>Añadir Nuevo Camión</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/trucks/add" method="POST">
          <div class="mb-3">
            <label for="placa" class="form-label">Placa / Matrícula</label>
            <input type="text" class="form-control" name="placa" id="placa" placeholder="ABC-123" required>
          </div>
          <div class="mb-3">
            <label for="marca" class="form-label">Marca</label>
            <input type="text" class="form-control" name="marca" id="marca" placeholder="Ej: Kenworth" required>
          </div>
          <div class="mb-3">
            <label for="modelo" class="form-label">Modelo</label>
            <input type="text" class="form-control" name="modelo" id="modelo" placeholder="Ej: T800" required>
          </div>
          <div class="mb-3">
            <label for="año" class="form-label">Año</label>
            <input type="number" class="form-control" name="año" id="año" placeholder="2020" required>
          </div>
          <div class="mb-3">
            <label for="alias" class="form-label">Alias (Opcional)</label>
            <input type="text" class="form-control" name="alias" id="alias" placeholder="Ej: El Guerrero">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-danger">
              <i class="fas fa-save me-2"></i>Guardar Camión
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>