<% layout('layouts/main') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="h4 mb-0"><i class="fas fa-id-card me-2"></i>Conductores</h2>
  <a href="/drivers/new" class="btn btn-danger"><i class="fas fa-user-plus me-2"></i>Nuevo Conductor</a>
  </div>

<div class="card shadow-sm">
  <div class="table-responsive">
    <table class="table align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th>Nombre</th><th>Teléfono</th><th>Licencia</th><th>DPI</th><th>Estado</th><th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (drivers.length === 0) { %>
          <tr><td colspan="6" class="text-center text-muted py-4">No hay conductores registrados.</td></tr>
        <% } %>
        <% drivers.forEach(function(d){ %>
          <tr>
            <td><a href="/drivers/<%= d._id %>"><strong><%= d.name %></strong></a></td>
            <td><%= d.phone || '—' %></td>
            <td><%= d.license || '—' %></td>
            <td><%= d.dpi || '—' %></td>
            <td><span class="badge <%= d.isActive ? 'bg-success' : 'bg-secondary' %>"><%= d.isActive ? 'Activo' : 'Inactivo' %></span></td>
            <td class="text-end">
              <a class="btn btn-sm btn-outline-primary" href="/drivers/<%= d._id %>/edit"><i class="fas fa-pen"></i></a>
              <form action="/drivers/<%= d._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('¿Eliminar conductor?');">
                <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>



